{% extends 'base.html.twig' %}
{% block body %}
<h2>Profil użytkownika {{ app.user.email }}</h2>

<div class="container">
    <div class="main-body">
          <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
              <div class="card">
                <div class="card-body">
                  <div class="d-flex flex-column align-items-center text-center">
                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                    <div class="mt-3">
                      <h4>{{ app.user.firstName }} {{ app.user.lastName }}</h4>
                      {# <p class="text-secondary mb-1">Full Stack Developer</p>
                      <p class="text-muted font-size-sm">Bay Area, San Francisco, CA</p>
                      <button class="btn btn-primary">Follow</button>
                      <button class="btn btn-outline-primary">Message</button> #}
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-8">
              <div class="card mb-3">
              <h2 class="m-3">Wypożyczenia</h2>
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-4">
                      Data Wypożyczenia
                    </div>
                    <div class="col-sm-4">
                      Data do zwrotu
                    </div>
                    <div class="col-sm-4">
                      Tytuł
                    </div>
                  </div>
                {% for loan in loans  %}
                  <div class="row">
                    <div class="col-sm-4">
                      {{ loan.getDateLoan() }}
                    </div>
                    <div class="col-sm-4">
                      {{ loan.getDateExpectedFinishLoan() }}
                    </div>
                    <div class="col-sm-4">
                      {{ loan.getProduct().getName() }}
                    </div>
                  </div>
                  {% endfor %}
                  <hr>
                </div>
              </div>
              <div class="card mb-3">
              <h2 class="m-3">Koszyki</h2>
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-4">
                      Identyfikator koszyka
                    </div>
                    <div class="col-sm-4">
                      Status
                    </div>
                    <div class="col-sm-4">
                      Zobacz więcej
                    </div>
                    {% for basket in baskets  %}
                      <div class="row">
                        <div class="col-sm-4">
                          {{ basket.getId() }}
                        </div>
                        <div class="col-sm-4">
                          //status
                        </div>
                        <div class="col-sm-4">
                          //ahref
                        </div>
                      </div>
                    {% endfor %}
                  </div>
                  </div>
                  <hr>
                </div>
              </div>
              </div>
            </div>
          </div>
        </div>
    </div>
{% endblock %}